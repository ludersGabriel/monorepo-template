{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "rootDir": "src",
    "paths": {
      "@/api/*": [
        "../../apps/api/src/*"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/packages/web"
    ]
  },
  "include": [
    "src"
  ]
}
